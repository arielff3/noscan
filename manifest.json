{
  "manifest_version": 3,
  "name": "NO SCAN",
  "version": "0.2.0",
  "description": "Block events on the page. (copy, paste, tab switching, …)",
  "author": "Ariel Ferreira",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "NO SCAN",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "blocker.js"
      ],
      "run_at": "document_start"
    }
  ]
}